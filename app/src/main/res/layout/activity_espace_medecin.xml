<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".EspaceMedecin"
       android:background="#5CC4BD"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <ImageView android:background="@drawable/medicone"
                android:layout_width="wrap_content"
                android:layout_height="180dip"
                android:layout_marginBottom="5dip"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16dip"
                android:fontFamily="casual"
                android:text="Vous etes médecin ?Pharmacien?Vous voulez que votre centre soit localisé ?"/>

            <!-- le nom-->

            <EditText android:id="@+id/nom_med"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"

                android:textColorHint="#818182"
                android:hint="Specialité(Médecin)" />

            <!-- numero du medecin -->

            <EditText android:id="@+id/prenom_med"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColorHint="#818182"
                android:hint="Nom" />




            <!-- Email Label -->

            <EditText android:id="@+id/med_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColorHint="#818182"
                android:hint="Téléphone" />
            <!-- Email Label -->

            <EditText android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColorHint="#818182"
                android:hint="Email" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dip"
                android:orientation="horizontal">

                <Button
                    android:layout_width="30dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dip"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/custom_btn"
                    android:text="Retour"
                    android:textColor="#818182"/>
                <Button
                    android:layout_width="30dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/custom_btn"
                    android:text="Envoyer"
                    android:textColor="#818182"/>
            </LinearLayout>






        </LinearLayout>
    </ScrollView>